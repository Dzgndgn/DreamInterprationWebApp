@using DreamAI.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Rüya Yorumlama";
    var messages = ViewBag.RecentMessages as IEnumerable<ChatMessageRecords>
                   ?? Enumerable.Empty<ChatMessageRecords>();
    @model List<DreamAI.Models.ChatMessageRecords>;
}

<section class="container py-4">
    <div class="row g-4">
        <!-- Sol: Rüya formu -->
        <div class="col-12 col-lg-7">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="h4 mb-3">Rüyanı Yaz</h2>
                    <p class="text-muted mb-4">Kısa ama anlamlı detaylarla yazman yorumun kalitesini artırır.</p>

                    <form method="post" asp-action="New">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <textarea name="text" class="form-control" rows="8"
                                      placeholder="Rüyanı buraya yaz..."></textarea>
                            <div class="form-text mt-2">
                                ⚠️ Bu bir eğlence/yorum uygulaması; tıbbi/psikolojik tavsiye değildir.
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-primary">
                                <i class="bi bi-magic me-1"></i> Yorumla
                            </button>
                            <button type="reset" class="btn btn-outline-secondary">Temizle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sağ: Geçmiş mesajlar -->
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body p-4 d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h3 class="h5 mb-0">Geçmiş Mesajların</h3>
                        <span class="badge bg-secondary-subtle text-secondary border rounded-pill">
                            @Model.Count() adet
                        </span>
                    </div>
                    <div class="text-muted small mb-3">
                        En yeni 15 kayıt; tıklanabilir detay sayfası eklemek istersen link verebiliriz.
                    </div>

                    <div class="flex-grow-1 overflow-auto" style="max-height:560px;">
                        @if (!@Model.Any())
                        {
                            <div class="text-center text-muted py-5">
                                <i class="bi bi-inboxes fs-2 d-block mb-2"></i>
                                Henüz kayıt yok.
                            </div>
                        }
                        else
                        {
                            foreach (var m in @Model)
                            {
                                <div class="border-start border-3 border-primary-subtle ps-3 mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-light text-dark">@m.Date.ToString("dd.MM.yyyy HH:mm")</span>
                                        <span class="small text-uppercase text-muted">@m.UserId</span>
                                    </div>
                                    <div class="mt-2">
                                        @* İçeriği güvenli render et, satır sonlarını koru *@
                                        @Html.Raw(Html.Encode(m.Content).Replace("\n", "<br/>"))
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <div class="mt-3 text-end">
                        <a asp-action="Details" class="btn btn-outline-primary btn-sm">Tümünü gör</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
